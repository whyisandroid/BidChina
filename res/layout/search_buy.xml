<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_bg"
    android:padding="20dp"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bt_choose_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="请选择：栏目" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_keywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="查找关键词"
            android:textColorHint="@color/new_color_3"
        	android:textSize="@dimen/new_size_3"
            android:ems="10" />

        <Spinner
            android:id="@+id/sp_categrae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />

    </LinearLayout>
    
    <Button
        android:id="@+id/bt_choose_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择：地区" />
    
    <Button
        android:id="@+id/bt_choose_vocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="请选择：行业" />
    
    
    <Spinner
            android:id="@+id/sp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />

    
    <Button
                android:id="@+id/bt_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dimen_large"
                android:layout_marginRight="@dimen/dimen_large"
                android:layout_marginTop="@dimen/dimen_other_large"
                android:background="@drawable/bt_next_xml"
                android:padding="@dimen/dimen_normal"
                android:text="开始搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/new_size_1" />

</LinearLayout>
